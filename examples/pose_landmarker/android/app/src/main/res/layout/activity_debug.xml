<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_alignParentTop="true"
            android:background="@color/yellow_main">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:contentDescription="@string/logo"
                android:src="@drawable/pushups_svgrepo_com" />
        </androidx.appcompat.widget.Toolbar>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/toolbar"
            android:orientation="vertical"
            android:padding="20dp">


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="480dp"
                app:cardCornerRadius="15dp">

                <androidx.fragment.app.FragmentContainerView
                    android:id="@+id/fragment_container"
                    android:name="androidx.navigation.fragment.NavHostFragment"
                    android:layout_width="match_parent"
                    android:layout_height="480dp"
                    android:background="@android:color/transparent"
                    android:keepScreenOn="true"
                    app:defaultNavHost="true"
                    app:navGraph="@navigation/nav_graph"
                    tools:context=".MainActivity" />

            </androidx.cardview.widget.CardView>

            <TableLayout
                android:id="@+id/simpleTableLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:stretchColumns="0,1"
                >

                <TableRow
                    android:id="@+id/row1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/leftElbow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_corner"
                        android:gravity="end"
                        android:padding="4dip"
                        android:text="@string/left_elbow"
                        android:textColor="#000"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/rightElbow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_corner"

                        android:gravity="start"
                        android:padding="4dip"
                        android:text="@string/right_elbow"
                        android:textColor="#000"
                        android:textSize="14dp" />
                </TableRow>

                <TableRow
                    android:id="@+id/row2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/leftHip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:background="@drawable/rounded_corner"
                        android:padding="4dip"
                        android:text="@string/left_hip"
                        android:textColor="#000"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/rightHip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_corner"
                        android:gravity="left"
                        android:padding="4dip"
                        android:text="@string/right_hip"
                        android:textColor="#000"
                        android:textSize="14dp" />
                </TableRow>

                <TableRow
                    android:id="@+id/row3"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/leftKnee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:background="@drawable/rounded_corner"
                        android:padding="4dip"
                        android:text="@string/left_knee"
                        android:textColor="#000"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/rightKnee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_corner"
                        android:gravity="left"
                        android:padding="4dip"
                        android:text="@string/right_knee"
                        android:textColor="#000"
                        android:textSize="14dp" />
                </TableRow>

                <TableRow
                    android:id="@+id/row4"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    >

                    <TextView
                        android:id="@+id/state"
                        android:layout_width="166dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_corner"
                        android:gravity="center"
                        android:padding="4dip"
                        android:layout_span="2"
                        android:text="@string/initial_user_state_etxt"
                        android:textColor="#000"
                        android:textSize="14dp" />
                </TableRow>

            </TableLayout>



        </LinearLayout>

    </RelativeLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
